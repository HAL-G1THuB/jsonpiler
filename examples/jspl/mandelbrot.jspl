define(
  mandelbrot, { cr: Float; ci: Float }, Int,
  {
    zr = 0.0
    zi = 0.0
    i = 0
    while(
      { $i < 50 } and { Int( { $zr * $zr } + { $zi * $zi } ) < 4 },
      {
        tmp = { { { $zr * $zr } - { $zi * $zi } } + $cr}
        zi = { { { 2.0 * $zr } * $zi }  + $ci }
        zr = $tmp
        i = { $i + 1 }
      }
    )
    $i
  }
)
define(
  render_row, { y: Int }, Null,
  {
    x = -80
    while(
      $x < 20,
      {
        fx = {Float($x) * 0.03}
        fy = {Float($y) * 0.06}
        iter = mandelbrot($fx, $fy)
        str = " "
        if(
        [$iter == 50, str = "#"],
        [45 < $iter,  str = "@"],
        [40 < $iter,  str = "%"],
        [35 < $iter,  str = "&"],
        [30 < $iter,  str = "$"],
        [25 < $iter,  str = "*"],
        [20 < $iter,  str = "+"],
        [15 < $iter,  str = "="],
        [10 < $iter,  str = "-"],
        [5  < $iter,  str = "."]
        )
        print($str)
        x = {$x + 1}
      }
    )
    print("\n")
  }
)

define(
  main, {}, Null,
  {
    y = -20
    while(
      $y < 20,
      {
        render_row($y)
        y = {$y + 1}
      }
    )
  }
)

main()
